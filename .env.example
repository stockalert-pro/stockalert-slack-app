# Slack App Credentials
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_CLIENT_ID=your-client-id
SLACK_CLIENT_SECRET=your-client-secret
SLACK_REDIRECT_URI=https://slack.stockalert.pro/api/slack/oauth

# StockAlert.pro Configuration
# Get this from https://stockalert.pro/dashboard/settings
STOCKALERT_WEBHOOK_SECRET=your-webhook-secret

# Vercel Postgres Database
# Created automatically when you connect Vercel Postgres
POSTGRES_URL="postgres://user:pass@host:5432/db?sslmode=require"
POSTGRES_URL_NON_POOLING="postgres://user:pass@host:5432/db?sslmode=require"

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: Default channel for notifications (for development only)
# DEFAULT_SLACK_CHANNEL=#general