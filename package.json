{
  "name": "@stockalert/slack-app",
  "version": "1.0.0",
  "description": "Slack app for receiving StockAlert.pro webhook notifications",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch server.ts",
    "start": "node dist/server.js",
    "start:vercel": "vercel dev",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "test:webhook": "tsx scripts/test-webhook.ts",
    "test:performance": "tsx scripts/performance-test.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "db:setup": "tsx scripts/setup-database.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "stockalert",
    "slack",
    "webhooks",
    "stock-market",
    "notifications"
  ],
  "author": "StockAlert.pro",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@slack/web-api": "^7.0.0",
    "@vercel/kv": "^3.0.0",
    "@vercel/node": "^5.3.4",
    "@vercel/postgres": "^0.10.0",
    "drizzle-orm": "^0.44.2",
    "express": "^4.21.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/express": "^5.0.0",
    "@types/node": "^24.5.2",
    "@types/node-fetch": "^2.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "node-fetch": "^3.3.2",
    "prettier": "^3.4.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vitest": "^3.2.4"
  }
}
